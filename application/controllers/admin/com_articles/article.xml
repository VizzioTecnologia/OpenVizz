<?xml version="1.0" encoding="utf-8"?>
<params>

	<section name="general_article_params">
		
		<param name="article_custom_url" type="text" default="" label="article_custom_url" tip="tip_article_custom_url" />
		
		<param name="article_thumb_source" type="select" default="global" label="article_thumb_source" tip="tip_article_thumb_source">

			<option value="global">Global</option>
			<option value="resized_picture">resized_image</option>
