<?xml version="1.0" encoding="utf-8"?>
<params>
	
	<section name="submit_form">
		
		<!-- as options deste campo são criadas via php -->
		<param name="submit_form_id" type="select" default="-1" label="select_submit_form" tip="tip_select_submit_form">
			
			<validation rules="trim|required|integer" />
			
		</param>
		
		<param name="submit_form_show_title" type="select" default="global" label="submit_form_show_title" tip="tip_submit_form_show_title">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			<option value="global">Global</option>
			
		</param>
		
		<!-- as options deste campo são criadas via php -->
		<param name="ud_ds_form_layout_site" type="select" default="global" label="ud_ds_form_layout_site" tip="tip_ud_ds_form_layout_site">
			
			<validation rules="trim|required" />
			
			<option value="global">Global</option>
			
		</param>
		
		<param type="spacer" label="captcha" />
		
		<param name="ud_dsf_enable_captcha" type="select" default="global" label="ud_dsf_enable_captcha" tip="tip_ud_dsf_enable_captcha">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			<option value="global">Global</option>
			
		</param>
		
		<param name="ud_dsf_captcha_site_key" type="text" default="" label="ud_dsf_captcha_site_key" tip="tip_ud_dsf_captcha_site_key"></param>
		
		<param name="ud_dsf_captcha_secret" type="text" default="" label="ud_dsf_captcha_secret" tip="tip_ud_dsf_captcha_secret"></param>
		
	</section>
	
</params>
