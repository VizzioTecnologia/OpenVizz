<?xml version="1.0" encoding="utf-8"?>
<params>
	
	<section name="articles_list">
		
		<param name="articles_list_columns" type="text" default="2" label="articles_list_columns" tip="tip_articles_list_columns">
			
			<validation rules="integer"/>
			
		</param>
		
		<param name="show_title_on_list_view" type="select" default="1" label="show_title_on_list_view" tip="tip_show_title_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_title_as_link_on_list_view" type="select" default="1" label="show_title_as_link_on_list_view" tip="tip_show_title_as_link_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_article_category_on_list_view" type="select" default="1" label="show_article_category_on_list_view" tip="tip_show_article_category_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_article_category_as_link_on_list_view" type="select" default="1" label="show_article_category_as_link_on_list_view" tip="tip_show_article_category_as_link_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_introtext_on_list_view" type="select" default="1" label="show_introtext_on_list_view" tip="tip_show_introtext_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_readmore_link" type="select" default="1" label="show_readmore_link" tip="tip_show_readmore_link">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_created_by_on_list_view" type="select" default="global" label="show_created_by_on_list_view" tip="show_created_by_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_created_date_on_list_view" type="select" default="global" label="show_created_date_on_list_view" tip="tip_show_created_date_on_list_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="readmore_text" type="text" default="readmore" label="readmore_text" tip="tip_readmore_text"/>
		
		<param name="articles_list_order" type="select" default="title" label="articles_list_order" tip="tip_articles_list_order">
			
			<option value="id">id</option>
			<option value="title">article_title</option>
			<option value="ordering">ordering</option>
			<option value="category_title">category</option>
			<option value="category_order">category_order</option>
			<option value="created_by_id">author</option>
			<option value="created_date">created_date</option>
			<option value="modified_date">modified_date</option>
			
		</param>
		
		<param name="articles_list_order_mode" type="select" default="asc" label="articles_list_order_mode" tip="tip_articles_list_order_mode">
			
			<option value="asc">ascendant</option>
			<option value="desc">decrescent</option>
			
		</param>
		
		<param name="pagination" type="select" default="10" label="pagination" tip="tip_pagination">
			
			<option value="5">5 per page</option>
			<option value="10">10 per page</option>
			<option value="15">15 per page</option>
			
		</param>
		
		<!-- as options deste campo são criadas via php -->
		<param name="layout_articles_list" type="select" default="default" label="layout" tip="tip_layout_articles_list">
			
			<validation rules="trim|required" />
			
		</param>
		
	</section>
	
	<section name="detail_view">
		
		<param name="page_title_on_detail_view" type="select" default="only_article_title" label="page_title_on_detail_view" tip="tip_page_title_on_detail_view">
			
			<option value="only_article_title">only_article_title</option>
			<option value="article_title_menu_item_title_as_prefix">article_title_menu_item_title_as_prefix</option>
			<option value="article_title_menu_item_title_as_sufix">article_title_menu_item_title_as_sufix</option>
			
		</param>
		
		<param name="show_title_on_detail_view" type="select" default="1" label="show_title_on_detail_view" tip="tip_show_title_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_title_as_link_on_detail_view" type="select" default="1" label="show_title_as_link_on_detail_view" tip="tip_show_title_as_link_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_article_category_on_detail_view" type="select" default="1" label="show_article_category_on_detail_view" tip="tip_show_article_category_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_article_category_as_link_on_detail_view" type="select" default="1" label="show_article_category_as_link_on_detail_view" tip="tip_show_article_category_as_link_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_introtext_on_detail_view" type="select" default="1" label="show_introtext_on_detail_view" tip="tip_show_introtext_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_created_by_on_detail_view" type="select" default="global" label="show_created_by_on_detail_view" tip="tip_show_created_by_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<param name="show_created_date_on_detail_view" type="select" default="global" label="show_created_date_on_detail_view" tip="tip_show_created_date_on_detail_view">
			
			<option value="1">yes</option>
			<option value="0">no</option>
			
		</param>
		
		<!-- as options deste campo são criadas via php -->
		<param name="layout_article_detail" type="select" default="default" label="layout" tip="tip_layout_article_detail">
			
			<validation rules="trim|required" />
			
		</param>
		
	</section>
	
</params>